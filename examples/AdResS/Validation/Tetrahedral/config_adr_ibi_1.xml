<?xml version='1.0' encoding='UTF-8'?>
<!-- Run IBI on Equilibrated PS -->
<mardyn version="20100525" >
    <refunits type="SI" >
        <length unit="nm">0.1</length>
        <mass unit="u">1.0</mass>
        <energy unit="eV">1.0</energy>
    </refunits>

    <simulation type="MD" >
        <run>
            <currenttime>0</currenttime>
            <equilibration>
                <steps>0</steps>
            </equilibration>
            <production>
                <steps>1000000</steps>
            </production>
        </run>
        <integrator type="Leapfrog">
            <timestep unit="reduced">0.001</timestep>
        </integrator>
        <ensemble type="NVT">
            <temperature unit="reduced" >1</temperature>
            <domain type="box">
                <lx unit="reduced">30</lx>
                <ly unit="reduced">10</ly>
                <lz unit="reduced">10</lz>
            </domain>
            <components>
                <include query="/components/moleculetype">./components_red.xml</include>
            </components>

            <phasespacepoint>
                <generator name="MultiObjectGenerator">
                    <objectgenerator>
                        <filler type="ReplicaFiller">
                            <input type="BinaryReader">
                                <header>TET-RED-REF-EQ-200k-1.restart.header.xml</header>
                                <data>TET-RED-REF-EQ-200k-1.restart.dat</data>
                            </input>
                        </filler>

                        <object type="Cuboid">
                            <lower> <x>0</x> <y>0</y> <z>0</z> </lower>
                            <upper> <x>30</x> <y>10</y> <z>10</z> </upper>
                        </object>
                    </objectgenerator>
                </generator>
            </phasespacepoint>
        </ensemble>

        <algorithm>
            <parallelisation type="DomainDecomposition"/>
            <datastructure type="LinkedCells">
                <cellsInCutoffRadius>1</cellsInCutoffRadius>
                <traversalSelector>c08</traversalSelector>
            </datastructure>
            <cutoffs type="CenterOfMass" >
                <radiusLJ unit="reduced" >5</radiusLJ>
            </cutoffs>
            <electrostatic type="ReactionField" >
                <epsilon>0</epsilon>
            </electrostatic>
            <thermostats>
                <thermostat type="VelocityScaling" componentId="global">
                    <temperature>1</temperature>
                </thermostat>
            </thermostats>
        </algorithm>

        <output>
            <!--outputplugin name="CheckpointWriter">
                <type>binary</type>
                <writefrequency>200000</writefrequency>
                <outputprefix>TET-RED-REF-EQ-200k</outputprefix>
            </outputplugin-->

            <!--outputplugin name="VTKMoleculeWriter">
                <outputprefix>vtkOutput</outputprefix>
                <writefrequency>10000</writefrequency>
            </outputplugin-->
        </output>

        <plugin name="IBI">
            <singleRun>true</singleRun>
            <stepsEquil>5e+4</stepsEquil>
            <stepsMeasure>5e+3</stepsMeasure>
            <bins>300</bins>

            <optimizer>
                <type>default</type>
                <alpha>0.4</alpha>
            </optimizer>

            <convergence>
                <threshold>0.98</threshold>
                <method>integral</method>
                <stop-method>worse</stop-method>
                <window-size>5</window-size>
                <offset>8</offset>
            </convergence>
        </plugin>
    </simulation>
</mardyn>
