<?xml version='1.0' encoding='UTF-8'?>
<mardyn version="20100525" >
    <refunits type="SI" >
        <length unit="nm">1.0</length>
        <mass unit="u">1.0</mass>
        <energy unit="eV">1.0</energy>
    </refunits>

    <!-- simulation options -->
    <simulation type="MD" >
        <run>
            <currenttime>0</currenttime>
            <equilibration>
                <steps>0</steps>
            </equilibration>
            <production>
                <steps>10000</steps>
            </production>
        </run>
        <integrator type="Leapfrog">
            <timestep unit="reduced">0.001</timestep>
        </integrator>
        <!--integrator type="Langevin">
            <timestep unit="reduced">0.001</timestep>
            <friction>0.1</friction>
            <ActiveRegions>
                <region>
                    <lower> <x>0</x> <y>0</y> <z>0</z> </lower>
                    <upper> <x>10</x> <y>10</y> <z>10</z> </upper>
                </region>
            </ActiveRegions>
        </integrator-->
        <ensemble type="NVT">
            <!-- Target temperature is 1000K -->
            <!-- real gas closer to ideal gas at higher temperatures but lower pressures -->
            <temperature unit="reduced" >100</temperature>
            <domain type="box">
                <lx unit="reduced">30</lx>
                <ly unit="reduced">10</ly>
                <lz unit="reduced">10</lz>
            </domain>
            <!-- instead of lx/ly/lz we might accept density -->
            <components>
                <include query="/components/moleculetype">./components.xml</include>
            </components>

            <phasespacepoint>
                <generator name="MultiObjectGenerator">
                    <objectgenerator>
                        <filler type="ReplicaFiller">
                            <input type="BinaryReader">
                                <header>TET-ADR-EQ-200k-1.restart.header.xml</header>
                                <data>TET-ADR-EQ-200k-1.restart.dat</data>
                            </input>
                        </filler>

                        <object type="Cuboid">
                            <lower> <x>0</x> <y>0</y> <z>0</z> </lower>
                            <upper> <x>30</x> <y>10</y> <z>10</z> </upper>
                        </object>
                    </objectgenerator>
                </generator>
            </phasespacepoint>
        </ensemble>

        <algorithm>
            <parallelisation type="DomainDecomposition"/>
            <datastructure type="LinkedCells">
                <cellsInCutoffRadius>1</cellsInCutoffRadius>
                <traversalSelector>c08</traversalSelector>
            </datastructure>
            <cutoffs type="CenterOfMass" >
                <radiusLJ unit="reduced" >5</radiusLJ>
            </cutoffs>
            <electrostatic type="ReactionField" >
                <epsilon>0</epsilon>
            </electrostatic>
            <thermostats>
                <thermostat type="VelocityScaling" componentId="global">
                    <temperature>100</temperature>
                </thermostat>
                <!--thermostat type="TemperatureObserver">
                    <samples>100</samples>
                    <ActiveRegions>
                        <region>
                            <lower> <x>0</x> <y>0</y> <z>0</z> </lower>
                            <upper> <x>10</x> <y>10</y> <z>10</z> </upper>
                        </region>
                    </ActiveRegions>
                </thermostat-->
            </thermostats>
        </algorithm>

        <output>
            <!--outputplugin name="CheckpointWriter">
                <type>binary</type>
                <writefrequency>200000</writefrequency>
                <outputprefix>TET-ADR-EQ-200k</outputprefix>
            </outputplugin-->
            <!--outputplugin name="RDF">
                <writefrequency>20</writefrequency>
                <samplingfrequency>1</samplingfrequency>
                <outputprefix>Tetrahedral-20k-ADR-FTH-S2_0_</outputprefix>
                <bins>100</bins>
                <intervallength>0.1</intervallength>
            </outputplugin-->
            <!--outputplugin name="PressureProfiler">
                <bins>
                    <x>18</x><y>10</y><z>10</z>
                </bins>
                <outdims>x</outdims>
                <mode>Direct</mode>
                <samples>100</samples>
                <sampleFreq>10</sampleFreq>
                <writeFreq>100</writeFreq>
                <start>19000</start>
                <filename>Tetrahedral-Pressure-ADR-FTH_</filename>
            </outputplugin-->
        </output>

        <plugin name="AdResS">
            <weightImpl>near</weightImpl>
            <sampler type="Direct">
                <sampleGap>2000000</sampleGap>
                <dim>0</dim>
                <binWidth>3.0e-1</binWidth>
            </sampler>

            <fpregions>
                <region id="1">
                    <lowX>10.0</lowX><lowY>-5.0</lowY><lowZ>-5.0</lowZ>
                    <highX>20.0</highX><highY>15.0</highY><highZ>15.0</highZ>
                    <hybridDimX>5.0</hybridDimX><hybridDimY>0.0</hybridDimY><hybridDimZ>0.0</hybridDimZ>
                </region>
            </fpregions>
        </plugin>

        <plugin name="SpatialProfile">
            <mode>cartesian</mode>
            <x>100</x>
            <y>1</y>
            <z>1</z>
            <writefrequency>10000</writefrequency>
            <timesteps>
                <init>0</init>
                <recording>1</recording>
            </timesteps>
            <outputprefix>ADR-density_</outputprefix>
            <profiledComponent>all</profiledComponent>
            <profiles>
                <density>true</density>
                <temperature>false</temperature>
                <velocity>false</velocity>
                <velocity3d>false</velocity3d>
                <virial>false</virial>
            </profiles>
        </plugin>
    </simulation>
</mardyn>
