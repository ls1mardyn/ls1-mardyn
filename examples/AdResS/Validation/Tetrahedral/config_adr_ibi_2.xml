<?xml version='1.0' encoding='UTF-8'?>
<!-- Run IBI on Equilibrated PS -->
<mardyn version="20100525" >
    <refunits type="SI" >
        <length unit="nm">0.1</length>
        <mass unit="u">1.0</mass>
        <energy unit="eV">1.0</energy>
    </refunits>

    <simulation type="MD" >
        <run>
            <currenttime>0</currenttime>
            <equilibration>
                <steps>0</steps>
            </equilibration>
            <production>
                <steps>200000</steps>
            </production>
        </run>
        <integrator type="Leapfrog">
            <timestep unit="reduced">0.001</timestep>
        </integrator>
        <ensemble type="NVT">
            <temperature unit="reduced" >1</temperature>
            <domain type="box">
                <lx unit="reduced">25</lx>
                <ly unit="reduced">25</ly>
                <lz unit="reduced">25</lz>
            </domain>
            <components>
                <include query="/components/moleculetype">./components_red.xml</include>
            </components>

            <phasespacepoint>
                <generator name="MultiObjectGenerator">
                    <objectgenerator>
                        <filler type="ReplicaFiller">
                            <input type="BinaryReader">
                                <header>TET-RED-REF-EQ-200k-1.restart.header.xml</header>
                                <data>TET-RED-REF-EQ-200k-1.restart.dat</data>
                            </input>
                        </filler>

                        <object type="Cuboid">
                            <lower> <x>0</x> <y>0</y> <z>0</z> </lower>
                            <upper> <x>25</x> <y>25</y> <z>25</z> </upper>
                        </object>
                    </objectgenerator>
                </generator>
            </phasespacepoint>
        </ensemble>

        <algorithm>
            <parallelisation type="DomainDecomposition"/>
            <datastructure type="LinkedCells">
                <cellsInCutoffRadius>1</cellsInCutoffRadius>
                <traversalSelector>c08</traversalSelector>
            </datastructure>
            <cutoffs type="CenterOfMass" >
                <radiusLJ unit="reduced" >5</radiusLJ>
            </cutoffs>
            <electrostatic type="ReactionField" >
                <epsilon>0</epsilon>
            </electrostatic>
            <thermostats>
                <thermostat type="VelocityScaling" componentId="global">
                    <temperature>1</temperature>
                </thermostat>
            </thermostats>
        </algorithm>

        <output>
            <outputplugin name="CheckpointWriter">
                <type>binary</type>
                <writefrequency>200000</writefrequency>
                <outputprefix>TET-RED-ADR-IBI-EQ-200k</outputprefix>
            </outputplugin>

            <!--outputplugin name="VTKMoleculeWriter">
                <outputprefix>vtkOutput</outputprefix>
                <writefrequency>10000</writefrequency>
            </outputplugin-->
        </output>

        <plugin name="AdResS">
            <weightImpl>near</weightImpl>
            <sampler type="Direct">
                <sampleGap>1</sampleGap>
                <window>10000</window>
                <useReset>true</useReset>

                <dim>0</dim>
                <bins>1000</bins>
            </sampler>

            <fpregions>
                <region id="1">
                    <lowX>10.0</lowX><lowY>-5.0</lowY><lowZ>-5.0</lowZ>
                    <highX>15.0</highX><highY>30.0</highY><highZ>30.0</highZ>
                    <hybridDimX>5.0</hybridDimX><hybridDimY>0.0</hybridDimY><hybridDimZ>0.0</hybridDimZ>
                </region>
            </fpregions>

            <CG-Force>../../examples/AdResS/Validation/Tetrahedral/force_18.txt</CG-Force>
            <CG-Pot>../../examples/AdResS/Validation/Tetrahedral/pot_18.txt</CG-Pot>
        </plugin>
    </simulation>
</mardyn>
