                        <coords> <x>0.57735027</x> <y>-0.57735027</y> <z>-0.57735027</z> </coords>
                        <mass>0.001</mass>
                        <sigma>5.0</sigma>
                        <epsilon>0.0001</epsilon>
                    </site>
