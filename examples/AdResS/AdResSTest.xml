                        <Ixx>0.0</Ixx>
                        <Iyy>0.0</Iyy>
                        <Izz>0.0</Izz>
                    </momentsofinertia>
                </moleculetype>
                <moleculetype id="3" name="CG_Mol">
                    <coord_base>principal_axes</coord_base>
                    <site type="LJ126" id="1" >
                        <coords> <x>0.0</x> <y>0.0</y> <z>0.0</z> </coords>
                        <mass>0.004</mass>
                        <sigma>5.0</sigma>
                        <epsilon>0.0004</epsilon>
                        <shifted>false</shifted>
                    </site>
                    <momentsofinertia rotates="xyz">
                        <Ixx>0.0</Ixx>
                        <Iyy>0.0</Iyy>
                        <Izz>0.0</Izz>
                    </momentsofinertia>
                </moleculetype>
            </components>

            <phasespacepoint>
                <generator name="CubicGridGenerator">
                    <specification>density</specification>
                    <density>0.01</density>
                    <binaryMixture>false</binaryMixture>
                </generator>
            </phasespacepoint>
        </ensemble>

        <algorithm>
            <parallelisation type="DomainDecomposition"/>
            <datastructure type="LinkedCells">
                <cellsInCutoffRadius>1</cellsInCutoffRadius>
                <traversalSelector>c08</traversalSelector>
            </datastructure>
            <cutoffs type="CenterOfMass" >
                <radiusLJ unit="reduced" >16.5351</radiusLJ>
            </cutoffs>
            <electrostatic type="ReactionField" >
                <epsilon>0</epsilon>
            </electrostatic>

            <thermostat type="VelocityScaling" component="1">
                <temperature>0.7</temperature>
            </thermostat>
        </algorithm>

        <output>
            <outputplugin name="VTKMoleculeWriter">
                <writefrequency>1</writefrequency>
                <writefrequencyOffset>0</writefrequencyOffset>
                <outputprefix>AdResSTest</outputprefix>
            </outputplugin>
        </output>

        <plugin name="AdResS">
            <weightImpl>euclid</weightImpl>
            <fpregions>
                <region id="1">
                    <lowX>40.0</lowX><lowY>40.0</lowY><lowZ>40.0</lowZ>
                    <highX>60.0</highX><highY>60.0</highY><highZ>60.0</highZ>
                    <hybridDim>20.0</hybridDim>
                </region>
                <region id="2">
                    <lowX>145.0</lowX><lowY>45.0</lowY><lowZ>45.0</lowZ>
                    <highX>155.0</highX><highY>55.0</highY><highZ>55.0</highZ>
                    <hybridDim>10.0</hybridDim>
                </region>
            </fpregions>
        </plugin>

    </simulation>
</mardyn>
