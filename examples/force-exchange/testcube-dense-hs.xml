      <outputplugin name="CheckpointWriter">
        <writefrequency>10</writefrequency>
        <outputprefix>mkTcTS</outputprefix>
      </outputplugin>
      -->
      <!--<outputplugin name="PovWriter">
        <writefrequency>10</writefrequency>
        <outputprefix>mkTcTS</outputprefix>
      </outputplugin> -->
    </output>

  </simulation>
</mardyn>
