<?xml version='1.0' encoding='UTF-8'?>
<mardyn version="20100525" >

	<refunits type="SI" >
		<length unit="nm">0.1</length>
		<mass unit="u">1</mass>
		<energy unit="K">1</energy>
	</refunits>

	<simulation type="MD" >
		<options> <option name="refreshIDs">1</option> </options>
		
		<integrator type="Leapfrog" >
			<timestep unit="reduced" >0.00182367</timestep>
		</integrator>

		<run>
			<currenttime>0.0</currenttime> 
			<production>
				<steps>10000</steps>
			</production>
		</run>

		<ensemble type="NVT">
			<!-- Nparticles determined by the input file -->
			<temperature unit="reduced" >0.80</temperature>
			<domain type="box">
				<lx>200</lx>
				<ly>160</ly>
				<lz>200</lz>
			</domain>

			<components>
				<include query="/components/moleculetype" >../../components_3c.xml</include>
				<include query="/mixing">../../mixing_3c.xml</include>
			</components>

			<phasespacepoint>
				<generator name="MultiObjectGenerator">
					<objectgenerator>
						<filler type="ReplicaFiller">
							<input type="BinaryReader">
								<header>../run02/cp_binary-1.restart.header.xml</header>
								<data>../run02/cp_binary-1.restart.dat</data>
							</input>
						</filler>

						<object type="Cuboid">
							<lower> <x>0</x> <y>0</y> <z>0</z> </lower>
							<upper> <x>200</x> <y>160</y> <z>200</z> </upper>
						</object>
					</objectgenerator>
				</generator>
			</phasespacepoint>

		</ensemble>

		<algorithm>
			<parallelisation type="DomainDecomposition">
				<!-- structure handled by DomainDecompMPIBase -->
				<!--<MPIGridDims> <x>5</x> <y>2</y> <z>8</z> </MPIGridDims>-->
			</parallelisation>
<!--
			<parallelisation type="KDDecomposition">
				<CommunicationScheme>direct</CommunicationScheme>
				<updateFrequency>100000</updateFrequency>
				<fullSearchThreshold>3</fullSearchThreshold>
				<splitBiggestDimension>0</splitBiggestDimension>
				<useVectorizationTuner>0</useVectorizationTuner>
				<generateNewFiles>0</generateNewFiles>
				<useExistingFiles>0</useExistingFiles>
			</parallelisation>
-->
			<datastructure type="LinkedCells">
				<cellsInCutoffRadius>1</cellsInCutoffRadius>
			</datastructure>
			<cutoffs type="CenterOfMass" >
			<defaultCutoff unit="reduced" >2.5</defaultCutoff>
				<radiusLJ unit="reduced" >2.5</radiusLJ>
			</cutoffs>
			<electrostatic type="ReactionField" >
				<epsilon>1.0e+10</epsilon>
			</electrostatic>
			
			<thermostats>
				<thermostat type="TemperatureControl">
					<control>
						<start>0</start>
						<frequency>1</frequency>
						<stop>1000000000</stop>
					</control>
					<regions>
						<region>
							<coords>
								<lcx>0.0</lcx> <lcy>0.0</lcy> <lcz>0.0</lcz>
								<ucx>200.0</ucx> <ucy>20.0</ucy> <ucz>200.0</ucz>
							</coords>
							<target>
								<temperature>0.8</temperature>
								<component>1</component>
							</target>
							<settings>
								<numslabs>20</numslabs>
								<exponent>0.4</exponent>
								<directions>xyz</directions>
							</settings>
							<writefreq>1000</writefreq>
							<fileprefix>betalog</fileprefix>
						</region>
						<region>
							<coords>
								<lcx>0.0</lcx> <lcy refcoordsID="0">20.0</lcy> <lcz>0.0</lcz>
								<ucx>200.0</ucx> <ucy refcoordsID="2">-10.0</ucy> <ucz>200.0</ucz>
							</coords>
							<target>
								<temperature>0.8</temperature>
								<component>0</component>
							</target>
							<settings>
								<numslabs>20</numslabs>
								<exponent>0.4</exponent>
								<directions>xz</directions>
							</settings>
							<writefreq>1000</writefreq>
							<fileprefix>betalog</fileprefix>
						</region>
					</regions>
				</thermostat>
			</thermostats>
		</algorithm>

		<output>
			<outputplugin name="CheckpointWriter">
				<type>binary</type>
				<writefrequency>10000</writefrequency>
				<outputprefix>cp_binary</outputprefix>
			</outputplugin>
			
			<outputplugin name="MmpldWriter" type="simple">
				<include query="/spheres" >../../sphereparams_3c.xml</include>
				<writecontrol>
					<start>0</start>
					<writefrequency>1000</writefrequency>
					<stop>10000</stop>
					<framesperfile>0</framesperfile>
				</writecontrol>
				<outputprefix>megamol</outputprefix>  
			</outputplugin>
		</output>

		<plugin name="DistControl">
			<control>
				<update>5000</update>
			</control>
			<filenames>
				<control>DistControl.dat</control>
				<profiles>DistControlProfiles</profiles>
			</filenames>
			<subdivision type="width">
				<width>0.5</width>
				<number>1</number>
			</subdivision>
			<init type="values">   <!-- type="startconfig|values|file" -->
				<values> <left>0</left> <right>4.925000000000000e+01</right> </values>
				<file>../run02/DistControl.dat</file>
				<simstep>100000</simstep>
			</init>
			<method type="denderiv">   <!-- type="density|denderiv" -->
				<componentID>0</componentID>
				<neighbourvals algorithm="smooth">3</neighbourvals>
				<neighbourvals algorithm="derivate">5</neighbourvals>
				<density>0.005</density>
			</method>
		</plugin>

		<plugin name="MaxCheck">
			<control>
				<start>0</start>
				<frequency>1</frequency>
				<stop>50000000</stop>
			</control>
			<yrange> <min>20.0</min> <max>30.0</max> </yrange>
			<targets>
				<target cid="2" method="1">
					<Fmax>500</Fmax>
					<vmax>10.0</vmax>
				</target>
				<target cid="3" method="1">
					<Fmax>500</Fmax>
					<vmax>10.0</vmax>
				</target>
			</targets>
		</plugin>
		
		<plugin name="Mirror" type="1" dir="|-o">
			<pluginID>100</pluginID>
			<position>
				<refID>0</refID>
				<coord>10.</coord>
			</position>
			<forceConstant>0.</forceConstant>
		</plugin>

		<plugin name="Mirror" type="5" dir="o-|">
			<pluginID>101</pluginID>
			<position>
				<refID>2</refID>
				<coord>100</coord>
			</position>
			<forceConstant>0.</forceConstant>
			<meland>
				<use_probability>1</use_probability>
				<velo_target>0.4</velo_target>
			</meland>
		</plugin>

		<plugin name="MettDeamonFeedrateDirector">
			<mirror>
				<pluginID>101</pluginID>
				<control> <update_freq>5000</update_freq> </control>
				<restart> <writefreq>10000</writefreq> </restart>
			</mirror>
		</plugin>

		<plugin name="MettDeamon">
			<control>
				<updatefreq>5000</updatefreq>
				<logfreqfeed>10000</logfreqfeed>
				<logfreqreleased>10000</logfreqreleased>
				<writefreq>10000</writefreq>
				<numvals>10</numvals>
				<feed>
					<init>0.0</init>
					<direction>1</direction>
					<method>5</method>
					<targetID>1</targetID>
					<target>0.0</target>
					<release_velo>
						<method>2</method>
						<fix_value>0.7</fix_value>
					</release_velo>
				</feed>
				<z2method>1</z2method>
				<manipfree> <ymin>30</ymin> <ymax>160</ymax> </manipfree>
			</control>
			<reservoir>
				<file type="binary">
					<header>../../sim01/run02/cp_binary-0.restart.header.xml</header>
					<data>../../sim01/run02/cp_binary-0.restart.dat</data>
				</file>
				<binwidth>10</binwidth>
			</reservoir>

			<restart>
				<binindex>0</binindex>
				<deltaY>0.0</deltaY>
			</restart>

			<changes>
				<change> <from>2</from> <to>1</to> </change>
			</changes>
		</plugin>

		<plugin name="PosNegComp">
			<cid_ub> <pos>2</pos> <neg>3</neg> </cid_ub>
			<limit_y> <left>20</left> <right>160</right> </limit_y>
		</plugin>

		<plugin name="RegionSampling">
			<region>
				<coords>
					<lcx>0.0</lcx> <lcy refcoordsID="0">0.0</lcy> <lcz>0.0</lcz>
					<ucx>box</ucx> <ucy refcoordsID="0">box</ucy> <ucz>box</ucz>
				</coords>

				<sampling type="profiles" single_component="1">
					<control>
						<start>0</start>
						<frequency>10000</frequency>
						<stop>1000000000</stop>
					</control>
					<subdivision type="width">
						<width>0.25</width>
						<number>1</number>
					</subdivision>
				</sampling>
			</region>

			<region>
				<coords>
					<lcx>0.0</lcx> <lcy refcoordsID="0">0.0</lcy> <lcz>0.0</lcz>
					<ucx>box</ucx> <ucy refcoordsID="0">box</ucy> <ucz>box</ucz>
				</coords>

				<sampling type="VDF" single_component="1">
					<control>
						<start>0</start>
						<frequency>10000</frequency>
						<stop>1000000000</stop>
					</control>
					<subdivision type="width">
						<width>0.5</width>
						<number>1000</number>
					</subdivision>
					<discretizations>
						<discretization cid="1">
							<numclasses>50</numclasses>
							<maxvalue>5.</maxvalue>
						</discretization>
					</discretizations>
				</sampling>
			</region>
		</plugin>
	</simulation>
</mardyn>
