#pragma once

#include <string>

const std::string MARDYN_VERSION_MAJOR = "@MarDyn_VERSION_MAJOR@";
const std::string MARDYN_VERSION_MINOR = "@MarDyn_VERSION_MINOR@";
const std::string MARDYN_VERSION_PATCH = "@MarDyn_VERSION_PATCH@";
const std::string MARDYN_VERSION_BRANCH = "_@MarDyn_VERSION_BRANCH@";
// this is the current git commit id
const std::string MARDYN_VERSION_HASH = "_@MarDyn_VERSION_HASH@";
// append "dirty" if uncommited code was used
const std::string MARDYN_VERSION_IS_DIRTY = "@MarDyn_VERSION_IS_DIRTY@";
// final combined version string
const std::string MARDYN_VERSION =
	MARDYN_VERSION_MAJOR + "."
	+ MARDYN_VERSION_MINOR + "."
	+ MARDYN_VERSION_PATCH
	+ MARDYN_VERSION_BRANCH
	+ MARDYN_VERSION_HASH
	+ MARDYN_VERSION_IS_DIRTY;
